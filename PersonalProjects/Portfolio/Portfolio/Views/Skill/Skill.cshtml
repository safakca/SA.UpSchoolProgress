@model List<Portfolio.DataAccess.Entities.Skill>

@{
    ViewData["Title"] = "Skills";
}
<h2>@ViewData["Title"]</h2>

<div class="container">

    <p>
        <a asp-action="Create" asp-controller="Skill">Create New</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Detail</th>
                <th scope="col">Edit | Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><a href="@item.Detail">@item.Detail</a> </td>
                    <td>
                        @Html.ActionLink("Edit", "Update", new {  id=@item.Id  }) |
                        @Html.ActionLink("Delete", "Remove", new {  id=@item.Id})
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>