@model CreateCategoryModel
@{
    Layout = "_Layout";
}

<form class="w-75 m-5 p-3  mx-auto" asp-action="Create" asp-controller="Category" method="post">
    <div class="mb-3">
        <label for="@Model.Defination" class="form-label">Category Name :</label>
        <span asp-validation-for="@Model.Defination" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="@Model.Defination" />
    </div>
  <div class="mb-3">
        <button class="btn btn-primary w-100">Save</button>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>
</form>