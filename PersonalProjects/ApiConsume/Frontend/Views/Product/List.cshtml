@model List<ProductListModel>
@{
    Layout = "_Layout";
}

@{
    if (Model?.Count > 0)
    {
        <div class="text-end">
            <a asp-action="Create" asp-controller="Product">Create a new record</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Stock</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Stock</td>
                        <td>
                            <a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                            <a asp-action="Remove" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <div class="text-center">Herhangi bir kayıt bulunamadı</div>
    }
}