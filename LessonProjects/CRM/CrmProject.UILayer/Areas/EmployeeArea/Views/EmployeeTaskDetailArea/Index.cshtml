@model List<EmployeeTaskDetail>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    int count = 0;
}

<h3>Görev Detayları</h3>
@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Açıklama</th>
            </tr>
        </thead>        

        @foreach (var item in Model)
        {
            count++;
            <tbody>
                <tr>
                    <td>@count</td>
                    <td>@item.Description</td>
                </tr>
            </tbody>
        }
    </table>

}
else
{
    <br />
    <br />
    <br />
    <br />
    <p>
        <center style="color:gray">Gerçekleşen işlem yok.</center>
    </p>
}
