@model DemoPortfolioProject.Models.Entities.TBLAbout
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
    @Html.HiddenFor(x=>x.AboutID)
    <label>AdSoyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Görsel</label>
    @Html.TextBoxFor(x => x.İmageURL, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary"> Kaydet </button>
</form>


