@using DemoPortfolioProject.Models.Entities
@model List<TBLAbout>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
        int sayac = 0;
    }



    <table class="table table-striped">
        <tr> 
            <th></th>
            <th>Adsoyad</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Görsel</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            sayac++;
            <tr>
                <td>@sayac</td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.İmageURL</td>
                <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Sil</a></td>
                <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-warning">Guncelle</a></td>
            </tr>
        }
    </table>
    <a href="/About/AddAbout" class="btn btn-primary">Yeni Hakkımda Girisi</a>
