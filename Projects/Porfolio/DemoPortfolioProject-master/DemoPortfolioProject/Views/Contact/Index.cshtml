@model List<DemoPortfolioProject.Models.Entities.TBLContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<table class="table table-striped">
    <tr>
        <th>No</th>
        <th>Adı Soyadı</th>
        <th>Mail</th>
        <th>Mesaj Konusu</th>
        <th>Oku</th>
        <th>Cevapla</th>
        <th>Sil</th>

    </tr>

    @foreach (var item in Model)
    {
        sayac++;
<tr>
    <td>@sayac</td>
    <td>@item.NameSurname</td>
    <td>@item.Email</td>
    <td>@item.MessageSubject</td>
    <td><a href="/Contact/ContactDetails/@item.ContactID" class="btn btn-primary">Mesajı Oku</a></td>
    <td><a href="/Contact/ContactMesajGonder/@item.ContactID" class="btn btn-primary">Cevapla</a></td>
    <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a></td>


</tr>
    }
</table>
