@using  DemoPortfolioProject.Models.Entities
@model List<TBLAcademic>

<section class="w3l-homeblock2" id="skills">
    <div class="midd-w3 py-5">
        <div class="container py-lg-5 py-md-3">
            <div class="row">
                <div class="col-lg-6 align-self">
                    <div class="position-relative px-lg-5 mx-lg-0 mx-md-5 image-padding">
                        <img src="~/Template/iportfolio-starter/assets/images/skills.png" alt="" class="radius-image img-fluid">
                        <div class="position-absolute-images">
                            <img src="~/Template/iportfolio-starter/assets/images/file.png" class="img-fluid pos-img" alt="" />
                            <img src="~/Template/iportfolio-starter/assets/images/file1.png" class="img-fluid pos-img1" alt="" />
                            <img src="~/Template/iportfolio-starter/assets/images/file2.png" class="img-fluid pos-img2" alt="" />
                        </div>
                    </div>

                </div>

                <div class="col-lg-6 mt-lg-0 mt-md-5 mt-4">
                    <span class="text">Akademik Kariyerim</span>


                    <div class="skills-bars mt-5">
                  
                            @foreach (var item in Model)
                            {
                               
                        <div>
                            <h4><strong>@item.SchoolName </strong></h4>
                            <p>@item.Description</p>
                            <strong> <span style="color:brown">@item.StartDate.Value.Year-@item.StartDate.Value.Month  \ @item.EndDate.Value.Year-@item.EndDate.Value.Month </span></strong>
                            <br />
                            <br />
                        </div>



                            }
                       
                    </div>
                </div>


            </div>
        </div>
    </div>
</section>

