
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CRMLayout.cshtml";
}

<h1>Index</h1>


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script> 
<script src="~/lib/jquery/dist/jquery.js" ></script>

<button id="btn1" class="btn btn-primary" style="display:inline-block;inline-size:150px">button</button>
<br />

<button id="btn2" class="btn btn-warning">button</button>


<script>
    $("#btn1").click(function () {
        swal("Hello world!");
